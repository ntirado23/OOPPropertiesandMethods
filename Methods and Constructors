using System;

class Program {
  public static void Main (string[] args) {

     Employee unknown = new Employee();; //constructor no parameters

    unknown.Intro();

    
    Employee JohnSmith = new Employee("John", "Smith", 45, "1234", 5000); //constructor with parameters 
    JohnSmith.Intro();
